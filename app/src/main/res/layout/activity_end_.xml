<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#EAEBEE"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_height="match_parent"
    tools:context=".cart_and_payement.End_Activity">

    <TextView
        android:id="@+id/order_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="122dp"
        android:layout_marginTop="79dp"
        android:fontFamily="@font/gotham"
        android:text="Order Id"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="229dp"
        android:layout_height="186dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="89dp"
        android:layout_marginTop="230dp"
        app:srcCompat="@drawable/order_confirmation" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="138dp"
        android:layout_marginBottom="278dp"
        android:fontFamily="@font/gotham"
        android:text="Successful"
        android:textColor="#0091EA"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/orderID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="138dp"
        android:layout_marginEnd="242dp"
        android:layout_marginBottom="566dp"
        android:fontFamily="@font/gotham"
        android:gravity="center"
        android:text="order id"
        android:textAlignment="center"
        android:textColor="#F10B0B"
        android:textSize="22dp" />
    <LinearLayout
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="0dp"
        android:background="#FAFAFA"
        android:orientation="horizontal">


        <Button
            android:id="@+id/home"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:background="#F82424"
            android:fontFamily="@font/gotham"
            android:text="Home"
            android:padding="2dp"
            android:textAlignment="center"
            android:textColor="#F7F2F2"
            android:textSize="19sp" />

        <Button
            android:id="@+id/Exit"
            android:layout_width="230dp"
            android:padding="2dp"
            android:layout_height="match_parent"
            android:background="#FDFDFD"
            android:fontFamily="@font/gotham"
            android:text="Exit"
            android:textAlignment="center"
            android:textColor="#F82424"
            android:textSize="19sp" />
    </LinearLayout>
</RelativeLayout>